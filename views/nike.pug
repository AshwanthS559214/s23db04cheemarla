extends layout

block content
  h1= title
  -let nike = results;
  div(class="container_fluid")
    each item,index in nike
      - let destination = `dispatch(\"/nike/update?id=${item._id}\")`
        div(class="row" onclick=`buy(${index})`)       
            div(class="col-sm-2") #{item.nike}
            div(class="col-sm-2") #{item.size}
            div(class="col-sm-2") #{item.cost}
        button.btn( class="btn-primary ml-1", onclick= destination) Update
  script.
      function buy(indexnumber){
        //indexnumber=indexnumber+1;
        alert('You purchased item '+ indexnumber)
      }
  script.
      function dispatch(path){
      window.location.href=path
      }